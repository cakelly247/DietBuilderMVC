@model IEnumerable<DietBuilder.Models.Meal.MealListItem>

@{
	ViewData["Title"] = "Meals";
}

<h1>Meals</h1>
<p>
	<a asp-action="Create">Make a new Meal</a>
</p>

@if (Model.Any())
{
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var meal in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(mealItem => meal.Name)
					</td>
					<td>
						<a asp-action="Details" asp-route-id=@meal.Id>Details</a> |
						<a asp-action="Edit" asp-route-id=@meal.Id>Edit</a> |
						<a asp-action="Delete" asp-route-id=@meal.Id>Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<span>There are currently no meals available</span>
}
