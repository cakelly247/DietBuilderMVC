@model DietBuilder.Models.Meal.MealDetail;

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>@Model.Name</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalCalories)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalCarbs)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalProtein)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(Item => Model.TotalCalories)
                        </td>
                        <td>
                            @Html.DisplayFor(Item => Model.TotalCarbs)
                        </td>
                        <td>
                            @Html.DisplayFor(Item => Model.TotalProtein)
                        </td>
                    </tr>
                </tbody>
            </table>

            <hr />

            <h3>Recipes</h3>

            <br />

            @if (Model.Recipes.Any())
            {
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var recipe in Model.Recipes)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(Item => recipe.Name)
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="Recipe" asp-route-id=@recipe.Id>Details</a> |
                                <a asp-action="Edit" asp-controller="Recipe" asp-route-id=@recipe.Id>Edit</a> |
                                <a asp-action="Delete" asp-controller="Recipe" asp-route-id=@recipe.Id>Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

                <span>
                    Add another recipe <a href="/Meal/@Model.Id/Recipe/Create">here</a>!
                </span>
            }
            else
            {
                <span>
                    You haven't added any recipes to this meal yet.
                    <a href="/Meal/@Model.Id/Recipe/Create">Click here to add one!</a>
                </span>
            }
        </div>
    </div>
</div>