		<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var recipeIngredient in Model.RecipeIngredients)
			{
				<tr>
					<td>
						@Html.DisplayFor(Item => recipeIngredient.Name)
					</td>
					<td>
						<a asp-action="Edit" asp-controller="RecipeIngredient" asp-route-id=@recipeIngredient.Id>Change quantity</a> |
						<a asp-action="Delete" asp-controller="RecipeIngredient" asp-route-id=@recipeIngredient.Id>Remove</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	*@
	<ul>
		@foreach (var recipeIngredient in Model.RecipeIngredients)
		{
			<li>@recipeIngredient.QuantityOf @recipeIngredient.Name</li>
		}
	</ul>
}
else
{
	<span>
		There are currently no ingredients in this recipe.
		<a href="/Recipe/@Model.Id/Ingredients/Create">Click here to add some!</a>
	</span>
}