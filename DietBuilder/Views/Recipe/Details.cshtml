@model DietBuilder.Models.Recipe.RecipeDetail;

@{
	ViewData["Title"] = @Model.Name;
}

<h1>@Model.Name</h1>



<h3>Ingredients</h3>

@if (Model.RecipeIngredients.Any())
{
	<span>
		<a href="/Recipe/@Model.Id/Ingredients/Create">Add ingredients to @Model.Name here!</a>
	</span>
