@model DietBuilder.Models.RecipeIngredient.RecipeIngredientUpdate;

@{
	ViewData["Title"] = "Update";
}

<h2>Update quantity for: @Model.Name in recipe: @Model.RecipeName</h2>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="QuantityOf" class="control-label"></label>
				<input asp-for="QuantityOf" class="form-control" />
				<span asp-validation-for="QuantityOf" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Update" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}